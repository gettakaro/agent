# Docker host ports (for grove multi-environment support)
APP_PORT=3100
POSTGRES_HOST_PORT=5433
REDIS_HOST_PORT=6379

# Tracing Configuration
TRACING_ENABLED=true
TAKARO_SERVICE=takaro-agent

# Langfuse SDK Configuration (for LLM tracing)
# Get credentials from https://cloud.langfuse.com
LANGFUSE_SECRET_KEY=sk-lf-xxx
LANGFUSE_PUBLIC_KEY=pk-lf-xxx
LANGFUSE_BASE_URL=https://cloud.langfuse.com
# Optional: Flush settings (defaults: flushAt=10, flushInterval=10000ms)
# LANGFUSE_FLUSH_AT=10
# LANGFUSE_FLUSH_INTERVAL=10000

# Optional: OpenTelemetry OTLP endpoint for system-level tracing (HTTP, DB, Redis)
# Use with Grafana Tempo, Jaeger, or other OTLP-compatible backends
# TRACING_ENDPOINT=http://localhost:4318/v1/traces

# Database
DATABASE_URL=postgresql://takaro:takaro@localhost:5433/takaro_agent

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3100

# OpenRouter (REQUIRED - app will not start without this)
OPENROUTER_API_KEY=your-api-key-here

# Takaro API
TAKARO_API_URL=https://api.takaro.io
TAKARO_LOGIN_URL=https://dashboard.takaro.io/login
CORS_ORIGINS=*

# Service account auth (for dev/testing)
# When both are set, the service logs in as this user at startup
# When not set, cookie-based auth is used (production mode)
TAKARO_USERNAME=
TAKARO_PASSWORD=
