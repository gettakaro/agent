# Docker host ports (for grove multi-environment support)
APP_PORT=3100
POSTGRES_HOST_PORT=5433
REDIS_HOST_PORT=6379

# Database
DATABASE_URL=postgresql://takaro:takaro@localhost:5433/takaro_agent

# Redis
REDIS_URL=redis://localhost:6379

# Server
PORT=3100

# OpenRouter (REQUIRED - app will not start without this)
OPENROUTER_API_KEY=your-api-key-here

# Takaro API
TAKARO_API_URL=https://api.takaro.io
TAKARO_LOGIN_URL=https://dashboard.takaro.io/login
CORS_ORIGINS=*

# Service account auth (for dev/testing)
# When both are set, the service logs in as this user at startup
# When not set, cookie-based auth is used (production mode)
TAKARO_USERNAME=
TAKARO_PASSWORD=
