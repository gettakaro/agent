<%- include('partials/header') %>

<div class="page">
  <div class="page-header">
    <h1>Conversations</h1>
    <a href="/new" class="btn btn-primary">New Conversation</a>
  </div>

  <% if (conversations.length === 0) { %>
    <div class="empty-state">
      <p>No conversations yet</p>
      <a href="/new" class="btn btn-primary">Start your first conversation</a>
    </div>
  <% } else { %>
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Agent</th>
            <th>Version</th>
            <th>Title</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% conversations.forEach(conv => { %>
            <tr>
              <td><span class="badge"><%= conv.agentId %></span></td>
              <td><span class="badge badge-outline">v<%= conv.agentVersion %></span></td>
              <td><%= conv.title || 'Untitled' %></td>
              <td><%= new Date(conv.createdAt).toLocaleString() %></td>
              <td>
                <a href="/conversations/<%= conv.id %>" class="btn btn-small">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
