<%- include('partials/header') %>

<div class="page">
  <div class="page-header">
    <h1>Agents</h1>
    <a href="/new" class="btn btn-primary">New Chat</a>
  </div>

  <% if (experiments.length === 0) { %>
    <div class="empty-state">
      <p>No agents registered</p>
    </div>
  <% } else { %>
    <div class="experiment-list">
      <% experiments.forEach(exp => { %>
        <div class="experiment-row">
          <div class="experiment-info">
            <div class="experiment-name">
              <span class="experiment-type"><%= exp.type %></span>
              <span class="experiment-separator">/</span>
              <span class="experiment-variant"><%= exp.experiment %></span>
            </div>
            <div class="experiment-model">
              <span class="text-muted"><%= exp.model %></span>
            </div>
          </div>
          <a href="/new?agent=<%= exp.id %>" class="btn btn-primary btn-small">Start Chat</a>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>
